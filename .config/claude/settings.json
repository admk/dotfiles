{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "BASH_DEFAULT_TIMEOUT_MS": "600000",
    "BASH_MAX_TIMEOUT_MS": "3600000",
    "DISABLE_NONESSENTIAL_TRAFFIC": "1"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(echo:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(jq:*)",
      "Bash(head:*)",
      "Bash(ls:*)",
      "Bash(tail:*)",
      "Bash(git commit:*)",
      "Bash(git diff:*)",
      "Bash(git grep:*)",
      "Bash(git log:*)",
      "Bash(git ls-files:*)",
      "Bash(git show:*)",
      "Bash(git status:*)",
      "Bash(gh issue view:*)",
      "Bash(gh search:*)",
      "Bash(gh issue list:*)",
      "WebFetch(domain:*)"
    ],
    "deny": [
      "Bash(sed:*)",
      "Read(**/.env*)",
      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Read(**/secrets/**)",
      "Read(**/credentials/**)",
      "Read(**/.aws/**)",
      "Read(**/.ssh/**)",
      "Read(**/docker-compose*.yml)",
      "Read(**/config/database.yml)",
      "Read(~/.config/claude-code-router/*)",
      "Read(~/.claude-code-router/*)",
      "Read(~/.config/llm/*)",
      "Read(~/.config/litellm/*)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "$XDG_CONFIG_HOME/claude/bin/statusline.sh"
  },
  "alwaysThinkingEnabled": true
}
