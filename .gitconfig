[user]
    name = Xitong Gao
    email = gxtfmx@gmail.com
    signingkey = AAA2C4B910EC254F
[alias]
    br = branch
    cm = commit
    co = checkout
    d = diff
    ds = diff --staged
    rb = rebase
    rs = restore
    mg = merge
    s = status
    sm = submodule
    sw = swich
    st = stash
    un = reset
    lg = log --graph --date-order --pretty=format:'%C(bold red)%h%Creset%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    unstage = reset
    unstage-all = reset --soft HEAD^
[core]
    autocrlf = input
    pager = colordiff | less --tabs=4 -RFX
	; editor = nvim
[commit]
	gpgsign = true
[color]
    ui = auto
    ; diff = auto
    status = auto
    branch = auto
    interactive = auto
    grep = auto
    pager = true
    decorate = auto
    showbranch = auto
[branch]
    autosetupmerge = always
    autosetuprebase = always
[merge]
    log = true
    summary = true
[push]
    default = matching
[credential]
    helper = osxkeychain
[filter "lfs"]
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22
[color "diff"]
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[rebase]
    autoStash = true
[http]
    proxy = http://127.0.0.1:7890
[pull]
    rebase = false
[url "https://github.com/"]
    insteadOf = git://github.com/
    insteadOf = git@github.com:
    insteadOf = gh:
    insteadOf = github:
[gpg]
    program = gpg
